package ex06_operator;

public class Ex01_operator {

	public static void main(String[] args) {
		//1. 단항연산자
		//항이 한개인 연산자
		
		//부호연산자
		int x = 100;
		int resultPlus = +x;
		int resultMinus = -x;
		System.out.println(resultPlus);
		System.out.println(resultMinus);
		 
		//2. 증감연산자
		//1씩 증가시키거나 1씩 감소시키는 연산자
		
		//선행증감
		int a = 10;
		System.out.println("a : " + ++a);
		//후행증감
	}

}
